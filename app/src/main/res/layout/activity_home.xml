<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="374dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        app:menu="@menu/bottom_menu" />

    <ImageView
        android:id="@+id/imageView_getphoto"
        android:layout_width="346dp"
        android:layout_height="273dp"
        android:background="@drawable/home_imageview_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/button_insectInformation"
        android:layout_width="142dp"
        android:layout_height="61dp"
        android:background="@drawable/button"
        android:text="Information about insect"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <Button
        android:id="@+id/button_Symptoms"
        android:layout_width="142dp"
        android:layout_height="61dp"
        android:background="@drawable/button"
        android:text="Symptoms"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <Button
        android:id="@+id/button_NearestHospital"
        android:layout_width="142dp"
        android:layout_height="61dp"
        android:background="@drawable/button"
        android:text="Nearest Hospital"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858" />

    <Button
        android:id="@+id/button4_FirstAid"
        android:layout_width="142dp"
        android:layout_height="61dp"
        android:background="@drawable/button"
        android:text="First Aid"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858" />

    <TextView
        android:id="@+id/results"
        android:layout_width="286dp"
        android:layout_height="81dp"
        android:textSize="25dp"
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625" />

    <Button
        android:id="@+id/predict"
        android:layout_width="141dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button"
        android:text="Predict"

        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_getphoto"
        tools:ignore="UnknownId" />

    <ImageButton
        android:id="@+id/imageBtn"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:background="@drawable/image_button"
        android:minHeight="48dp"
        android:src="@drawable/baseline_add_photo_alternate_24"
        app:layout_constraintBottom_toTopOf="@+id/imageView_getphoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.873"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/captureBtn"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/image_button"
        android:minHeight="48dp"
        android:src="@drawable/baseline_camera_alt_24"
        app:layout_constraintBottom_toTopOf="@+id/imageView_getphoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725"
        tools:ignore="SpeakableTextPresentCheck"
        />


</androidx.constraintlayout.widget.ConstraintLayout>